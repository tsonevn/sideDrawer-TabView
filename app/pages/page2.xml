<Page xmlns="http://schemas.nativescript.org/tns.xsd"  
    xmlns:dpg="nativescript-telerik-ui/sidedrawer/drawerpage"
    xmlns:drawer="nativescript-telerik-ui/sidedrawer" loaded='loaded'>

 
<dpg:DrawerPage.sideDrawer>
        <drawer:RadSideDrawer id="sideDrawer">
          <drawer:RadSideDrawer.drawerContent>
              <StackLayout cssClass="drawerContent">
                  <StackLayout cssClass="headerContent">
                    <Label text="Header"/>
                  </StackLayout>
                  <StackLayout cssClass="drawerMenuContent">
                    <Label text="Page 1" id="main-page" tap="onTap"/>
                    <Label text="Page 2" id="pages/page2" tap="onTap"/>
                    <Label text="Page 3" id="pages/page3" tap="onTap"/>
                  </StackLayout>
                </StackLayout>
           </drawer:RadSideDrawer.drawerContent>
           <drawer:RadSideDrawer.mainContent>
                <GridLayout >
                   <Label text="page2" textWrap="true" />
                   
                </GridLayout>
           </drawer:RadSideDrawer.mainContent>
        </drawer:RadSideDrawer>
</dpg:DrawerPage.sideDrawer>
     
</Page>